{
    "apiVersion": "v1",
    "kind": "Pod",
    "metadata": {
        "name": "{pod_name}",
        "namespace": "{namespace}",
        "labels": {
            "app": "{pod_name}"
        }
    },
    "spec": {
        "restartPolicy": "Never",
        "containers": [{
            "name": "{container_name}",
            "image": "{image}",
            "imagePullPolicy": "{imagePullPolicy}",
            "ports": [{
                "containerPort": "{port}"
            }],
            "resources": {},
            "env": [],
            "volumeMounts": []
        }],
        "volumes": []
    }
}
